<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/darkGreen"></solid>
            <padding android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"></padding>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/gray"></solid>
            <!--<size android:height="120dp" android:width="120dp"></size>-->
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/white"/>//Background Color
        </shape>
    </item>
</layer-list>